<div>
  <h1><%= @human_name %> vs <%= @computer_name %></h1>
  <h3><%= @human_points %>   <%= @computer_points %></h3>
  <h2>Choose your hand</h2>
  <form action="/rock" method="post">
    <input type="submit" name="rock" value="rock">
  </form>
  <form action="/paper" method="post">
    <input type="submit" name="paper" value="paper">
  </form>
  <form action="/scissors" method="post">
    <input type="submit" name="scissors" value="scissors">
  </form>
  <h1>You chose <%= @human_hand %></h1>
  <h1><%= @computer_name %> chose <%= @computer_hand %></h1>
  <h1>You <%= @round_status %> the last round</h1>
</div>